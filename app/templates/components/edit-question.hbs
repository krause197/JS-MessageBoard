<div class="edit">
  {{#if editQuestionForm}}
    <h4>Edit {{question.author}}'s {{question.text}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="text">Question Asked</label>
          {{input value=text id="text" placeholder=question.text}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>

        <div class="form-group">
          <label for="notes">Additional Notes</label>
          {{input value=notes id="notes" placeholder=question.notes}}
        </div>

        <div class="form-group">
          <label for="tags">Tags</label>
          {{input value=tags id="tags" placeholder=question.tags}}
        </div>
        <button {{action 'edit' post}}>Save</button>
      </form>
    </div>
  {{else}}
    <button {{action 'editQuestionForm'}}>Edit</button>
  {{/if}}
</div>
