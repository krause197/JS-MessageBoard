<div class="questionDetail">
  <h2>{{model.text}}</h2>
  <h4>Asked By {{model.author}}</h4>
  <p>{{model.notes}}</p>
  <p>{{model.tags}}</p>
  <div class="edit">
    {{edit-question question=question edit="edit" destroyQuestion="destroyQuestion"}}
    <button {{action 'delete' question}}>Delete Question</button>
  </div>
</div>
